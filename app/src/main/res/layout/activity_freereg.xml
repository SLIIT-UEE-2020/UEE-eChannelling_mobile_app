<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prem_reg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/logo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Registration Form - Free Member"
            android:textSize="18dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp">

        </TextView>


        <EditText
            android:id="@+id/editTitleD"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="text" />

        <EditText
            android:id="@+id/editfirst1D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/logo"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="First Name"
            android:inputType="text" />
        <EditText
            android:id="@+id/editlast1D"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Last Name"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="text" />
        <EditText
            android:id="@+id/editSpecD"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/editnic1"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NIC"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/editEmD"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date of Birth"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="text" />
        <EditText
            android:id="@+id/editmobile1"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mobile Number"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="text" />
        <EditText
            android:id="@+id/editpass1D"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/logo"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/editconfirm1D"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm Password"
            android:layout_alignTop="@id/logo"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/rbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom = "20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Register">

        </Button>
    </LinearLayout>

</ScrollView>